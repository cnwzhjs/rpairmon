{
    "rpinfra": {
        "type": "library",
        "directory": "libs/rpinfra"
    },

    "rpusbdisp_drv": {
        "type": "library",
        "directory": "libs/rpusbdisp/drivers/usermode-sdk/rpusbdisp-drv",
        "depends": [
            "libusbx_wrap"
        ]
    },

    "libusbx_wrap": {
        "type": "library",
        "directory": "libs/libusbx_wrap",
        "depends": [
            "rpinfra"
        ]
    },

    "libfreetype2_wrap": {
        "type": "library",
        "directory": "libs/libfreetype2_wrap",
        "depends": [
            "rpinfra"
        ],
        "extra_include_dirs": [
            "${OUTPUT_ROOT}/include/freetype2"
        ]
    },

    "rpui": {
        "type": "library",
        "directory": "libs/rpui",
        "depends": [
            "rpusbdisp_drv",
            "libfreetype2_wrap"
        ],
        "extra_include_dirs": [
            "${SRC_DIR}/../../3rdparty/libpng-1.6.17"
        ]
    },

    "jsoncpp": {
        "type": "library",
        "directory": "3rdparty/jsoncpp",
        "output_headers": true
    },

    "rpairmon": {
        "type": "application",
        "directory": "apps/rpairmon",
        "depends": [
            "rpui",
            "jsoncpp"
        ],
        "external_depends": [
            "png16",
            "freetype",
            "curl",
            "usb-1.0",
            "z"
        ],
        "env?target_arch=armv7hf": {
            "ldflags": ["-s", "-static"]
        }
    }
}

